{
    "name": "mluster/jazz-modules",
    "type": "project",
    "description": "Jazz Modules for Laravel",
    "keywords": [
        "framework",
        "laravel",
        "modules"
    ],
    "license": "BSD-3-Clause",
    "require": {
        "php": "^8.0|^8.1",
        "laravel/framework": "^9.0"
    },
    "require-dev": {
        "orchestra/testbench": "^7.7",
        "mockery/mockery": "^1.5.0",
        "nunomaduro/collision": "^6.2",
        "phploc/phploc": "^7.0",
        "phpmd/phpmd": "@stable",
        "phpstan/phpstan": "^0.12",
        "phpunit/phpunit": "^9.5.10",
        "sebastian/phpcpd": "^6.0",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "autoload": {
        "psr-4": {
            "Jazz\\Modules\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\Jazz\\Modules\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "phpcs": [
            "./vendor/bin/phpcs -s --report-json=storage/reports/phpcs.json > storage/reports/phpcs.out"
        ],
        "phpmd": [
            "./vendor/bin/phpmd app,tests json phpmd.xml --reportfile storage/reports/phpmd.json"
        ],
        "phploc": [
            "./vendor/bin/phploc --count-tests --log-json storage/reports/phploc.json app tests > storage/reports/phploc.out"
        ],
        "phpcpd": [
            "./vendor/bin/phpcpd --log-pmd storage/reports/phpcpd.xml app tests > storage/reports/phpcpd.out"
        ],
        "phpstan": [
            "./vendor/bin/phpstan analyse -c phpstan.neon --error-format=prettyJson app tests > storage/reports/phpstan.json"
        ],
        "phpunit": [
            "./vendor/bin/phpunit -c phpunit.xml > storage/reports/phpunit.out"
        ],

        "analyze": [
            "@phpunit",
            "@phpcs",
            "@phpmd",
            "@phploc",
            "@phpcpd",
            "@phpstan"
        ]
    }
}
