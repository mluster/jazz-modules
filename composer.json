{
    "name": "mluster/jazz-modules",
    "type": "project",
    "description": "Jazz Modules for Laravel",
    "keywords": [
        "laravel",
        "framework",
        "package",
        "modules"
    ],
    "license": "BSD-3-Clause",
    "require": {
        "php": "^8.0|^8.1",
        "laravel/framework": "^9.0"
    },
    "require-dev": {
        "orchestra/testbench": "^7.7",
        "mockery/mockery": "^1.5.0",
        "phploc/phploc": "^7.0",
        "phpmd/phpmd": "@stable",
        "phpstan/phpstan": "^0.12",
        "phpunit/phpunit": "^9.5.10",
        "sebastian/phpcpd": "^6.0",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Jazz\\Modules\\Provider",
                "Jazz\\Modules\\ConsoleProvider"
            ],
            "dont-discover": []
        }
    },
    "autoload": {
        "psr-4": {
            "Jazz\\Modules\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "JazzTest\\Modules\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "phpcs": [
            "./vendor/bin/phpcs -s --report-json=storage/phpcs.json > storage/phpcs.out"
        ],
        "phpmd": [
            "./vendor/bin/phpmd src,tests json phpmd.xml --reportfile storage/phpmd.json"
        ],
        "phploc": [
            "./vendor/bin/phploc --count-tests --log-json storage/phploc.json src tests > storage/phploc.out"
        ],
        "phpcpd": [
            "./vendor/bin/phpcpd --log-pmd storage/phpcpd.xml src tests > storage/phpcpd.out"
        ],
        "phpstan": [
            "./vendor/bin/phpstan analyse -c phpstan.neon --error-format=prettyJson src tests > storage/phpstan.json"
        ],
        "phpunit": [
            "./vendor/bin/phpunit -c phpunit.xml > storage/phpunit.out"
        ],

        "analyze": [
            "@phpunit",
            "@phpcs",
            "@phpmd",
            "@phploc",
            "@phpcpd",
            "@phpstan"
        ]
    }
}
